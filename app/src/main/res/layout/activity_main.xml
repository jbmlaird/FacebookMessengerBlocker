<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    android:id="@+id/activity_main"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent"
    android:paddingBottom="@dimen/activity_vertical_margin">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:id="@+id/lytFirst"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@+id/lytTimer"
            android:background="#990000"
            android:clickable="true"
            android:foreground="?attr/selectableItemBackground"
            android:gravity="center_vertical"
            android:padding="8dp">

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_marginStart="16dp"
                android:text="Modify blacklist"
                android:textColor="@android:color/white"
                android:textSize="14sp"
                android:textStyle="bold"/>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/lytSwitch"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@+id/lytFirst"
            android:clickable="true"
            android:foreground="?attr/selectableItemBackground"
            android:padding="8dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="16dp"
                android:clickable="false"
                android:text="Enable overlay"
                android:textColor="@android:color/white"
                android:textSize="14sp"
                android:textStyle="bold"/>

            <android.support.v7.widget.SwitchCompat
                android:id="@+id/toggleSwitch"
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"/>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/lytThird"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@+id/lytSwitch"
            android:background="#990000"
            android:clickable="true"
            android:foreground="?attr/selectableItemBackground"
            android:gravity="center_vertical"
            android:padding="8dp">

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_marginStart="16dp"
                android:text="Feedback"
                android:textColor="@android:color/white"
                android:textSize="14sp"
                android:textStyle="bold"
                tools:layout_editor_absoluteX="0dp"
                tools:layout_editor_absoluteY="0dp"/>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/lytFourth"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@+id/lytThird"
            android:clickable="true"
            android:foreground="?attr/selectableItemBackground"
            android:gravity="center_vertical"
            android:padding="8dp">

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/lytTimer"
            android:layout_width="match_parent"
            android:layout_height="180dp">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_centerInParent="true">

                <com.shawnlin.numberpicker.NumberPicker
                    android:id="@+id/number_picker"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    app:np_dividerColor="@android:color/white"
                    app:np_height="180dp"
                    app:np_max="12"
                    app:np_min="0"
                    app:np_textColor="@android:color/white"
                    app:np_textSize="20sp"
                    app:np_typeface="sans-serif-light"
                    app:np_width="64dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="8dp"
                    android:layout_toEndOf="@+id/number_picker"
                    android:text="hours"
                    android:textSize="20sp"/>
                <!--app:np_formatter="%02d"-->

            </RelativeLayout>

        </RelativeLayout>

        <View
            android:id="@+id/firstDivider"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/lytThird"
            android:layout_marginTop="8dp"
            android:background="@android:color/white"/>

        <RelativeLayout
            android:id="@+id/lytBlock"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_below="@+id/firstDivider"
            android:clickable="true"
            android:foreground="?attr/selectableItemBackground"
            android:gravity="center_vertical"
            android:padding="8dp">

            <TextView
                android:id="@+id/tvBlock"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="Block"
                android:textAllCaps="true"
                android:textSize="40sp"/>

        </RelativeLayout>

        <View
            android:id="@+id/secondDivider"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/lytBlock"
            android:background="@android:color/white"/>

    </RelativeLayout>

</ScrollView>
